{% include 'object-filters-demo/styles' %}
<section class="quire-page__object-filters">
  <input class="collapsible-checkbox" type="checkbox" id="collapsible-checkbox" />
  <label for="collapsible-checkbox" class="collapsible-toggle"></label>
  <div class="collapsible-panel">
    <div class="object-filters">
      {% for i in (1..30) %}
        <div class="object-filter">
          <label for="object-type-{{i}}">Object Filter {{i}}:</label>
          <select name="Type" id="object-type-{{i}}">
            <option value="">All</option>
          </select>
        </div>
      {% endfor %}
      <div class="object-filter">
        <label for="object-period">Ut placerat orci nulla pellentesque dignissim enim, sit amet venenatis urna cursus eget nunc</label>
        <select name="Time Period" id="object-period">
          <option value="">Sed id semper risus in hendrerit gravida rutrum quisque</option>
        </select>
      </div>
    </div>
    <button class="object-filters__button">Reset Filters</button>
  </div>
</section>
<script type="text/javascript">
const classes = [
  'collapsible',
  // 'sticky',
  // 'stuck'
];
window.addEventListener('load', () => {
  const element = document.querySelector('.quire-page__object-filters');
  element.classList.add(...classes);
});
</script>
