{% include 'object-filters-demo/styles' %}
<section class="quire-page__object-filters">
  <input class="collapsible-checkbox" type="checkbox" id="collapsible-checkbox" />
  <label for="collapsible-checkbox" class="collapsible-toggle"></label>
  <div class="collapsible-panel">
    <div class="object-filters">
      <div class="object-filter">
        <label for="object-type">Type:</label>
        <select name="Type" id="object-type">
          <option value="">All</option>
        </select>
      </div>
      <div class="object-filter">
        <label for="object-theme">Theme:</label>
        <select name="Theme" id="object-theme">
          <option value="">All</option>
        </select>
      </div>
      <div class="object-filter">
        <label for="object-material">Material:</label>
        <select name="Material" id="object-material">
          <option value="">All</option>
        </select>
      </div>
    </div>
    <button class="object-filters__button">Reset Filters</button>
  </div>
</section>
<script type="text/javascript">
const classes = [
  // 'collapsible',
  'sticky',
  // 'stuck'
];
window.addEventListener('load', () => {
  const element = document.querySelector('.quire-page__object-filters');
  element.classList.add(...classes);
});
</script>
